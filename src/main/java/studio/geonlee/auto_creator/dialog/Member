package studio.geonlee.entity;

import jakarta.persistence.*;
import lombok.Getter;
import lombok.Setter;
import java.time.*;

@Getter
@Setter
@Entity
@Table(name = "member")
public class Member {

    /** 회원 아이디 */
    @Id
    @Column(name = "member_id", nullable = false, length = 30)
    private String memberId;

    /** 회원 이름 */
    @Column(name = "member_nm", nullable = false, length = 20)
    private String memberNm;

    /** 패스워드 */
    @Column(name = "pswd", nullable = false, length = 255)
    private String pswd;

    /** 핸드폰번호 */
    @Column(name = "cellphone", nullable = false, length = 11)
    private String cellphone;

    /** 생년월일 */
    @Column(name = "birthdate")
    private LocalDate birthdate;

    /** 사용 여부 */
    @Column(name = "use_yn", nullable = false, length = 1)
    private String useYn;

    /** 접근 토큰 */
    @Column(name = "access_token", length = 255)
    private String accessToken;

    /** 갱신 토큰 */
    @Column(name = "refresh_token", length = 255)
    private String refreshToken;

    /** 패스워드 수정 일자 */
    @Column(name = "pswd_udt_dt", nullable = false)
    private LocalDate pswdUdtDt;

    /** 로그인 시도 횟수 */
    @Column(name = "login_atmpt_cnt", length = 5)
    private String loginAtmptCnt;

    /** 생성 일시 */
    @Column(name = "crt_dtm", nullable = false)
    private LocalDateTime crtDtm;

    /** 수정 일시 */
    @Column(name = "udt_dtm", nullable = false)
    private LocalDateTime udtDtm;

}